<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_cost_change_percentage_wiz" model="ir.ui.view">
            <field name="name">cost.change.percentage</field>
            <field name="model">cost.change.percentage</field>
            <field name="arch" type="xml">
                <form string="Cost Change">
                    <sheet>
                        <separator string="Cost Change"/>
                        <group>
                            <group>
                                <field name="percentage_change"
                                       help='If left as zero, we will only load the products for this vendor and product class(as applicable). Price changes will need to be manually entered.'/>
                            </group>
                        </group>
                    </sheet>
                    <footer>
                        <button string="Add Lines" type="object" name="add_cost_change_lines"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>
