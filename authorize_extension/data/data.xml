<odoo>
    <data>
        <record forcecreate="True" id="ir_cron_create_autherize_batch_payment" model="ir.cron">
            <field name="name">Autherize.net Batch Payment</field>
            <field name="model_id" ref="model_account_batch_payment"/>
            <field name="state">code</field>
            <field name="code">model.create_autherize_batch_payment()</field>
            <field eval="False" name="active"/>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="nextcall" eval="(DateTime.now().replace(hour=4, minute=0) + timedelta(days=1)).strftime('%Y-%m-%d %H:%M:%S')" />
            <field name="numbercall">-1</field>
            <field eval="False" name="doall"/>
        </record>
        <!--Cron for capturing posted invoices  -->
        <record forcecreate="True" id="ir_cron_capture_posted_invoices" model="ir.cron">
            <field name="name">Autherize.net Capture Invoices</field>
            <field name="model_id" ref="model_account_move"/>
            <field name="state">code</field>
            <field name="code">model.cron_capture_autherize_invoices()</field>
            <field eval="False" name="active"/>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field eval="False" name="doall"/>
        </record>
        <!--Cron for void the price changed Sale Orders-->
        <record forcecreate="True" id="ir_cron_void_pricechanged_so_transactions" model="ir.cron">
            <field name="name">Autherize.net: Price changed SO Operations</field>
            <field name="model_id" ref="model_sale_order"/>
            <field name="state">code</field>
            <field name="code">model.cron_void_pricechanged_so_transactions()</field>
            <field eval="True" name="active"/>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field eval="False" name="doall"/>
        </record>

    </data>
</odoo>
