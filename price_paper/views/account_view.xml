<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
         <template id="report_ppt_followup_filter_info_template_inherit" inherit_id="account_reports.followup_filter_info_template">
            <xpath expr="//div/div/div" position="attributes">
                <attribute name="class">col-5</attribute>
            </xpath>
        </template>

        <record id="account_payment_term_line_tree_pricepaper" model="ir.ui.view">
            <field name="name">account.payment.term.line.tree.pricepaper</field>
            <field name="model">account.payment.term.line</field>
            <field name="inherit_id" ref="account.view_payment_term_line_tree"/>
            <field name="arch" type="xml">
                <field name="days" position="before">
                    <field name="grace_period"/>
                </field>
            </field>
        </record>

        <record id="account_payment_term_line_form_pricepaper" model="ir.ui.view">
            <field name="name">account.payment.term.form.line.pricepaper</field>
            <field name="model">account.payment.term.line</field>
            <field name="inherit_id" ref="account.view_payment_term_line_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group[1]/group[2]/div[1]" position="after">
                    <field name="grace_period"/>
                </xpath>
            </field>
        </record>

        <record id="view_account_invoice_supplier_form_form_inherit_price_paper_storage_contract" model="ir.ui.view">
            <field name="name">account.invoice.inherited.form</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_supplier_form"/>
            <field name="arch" type="xml">
                 <xpath expr="//form/sheet/notebook/page/field[@name='invoice_line_ids']/tree/field[@name='price_subtotal']" position="before">
                    <field name="is_storage_contract" invisible="1"/>
                </xpath>
            </field>
        </record>
        <record id="inherit_account_invoice_form_view" model="ir.ui.view">
            <field name="name">inherited.account.invoice.form.view</field>
            <field name="model">account.invoice</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="account.invoice_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="invoice_address_id"/>
                </xpath>
                <xpath expr="//tree[1]" position="attributes">
                    <attribute name="editable"/>
                    <attribute name="decoration-danger">profit_margin&lt;0</attribute>
                    <attribute name="decoration-info">profit_margin==0</attribute>
                    <attribute name="decoration-success">profit_margin&gt;0</attribute>
                </xpath>
                <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='price_unit']" position="after">
                    <field name="profit_margin"/>
                    <field name="lst_price" invisible="1"/>
                    <field name="working_cost" invisible="1"/>
                </xpath>
                <xpath expr="//field[@name='amount_untaxed']" position="after">
                    <field name="gross_profit" widget="monetary" string='Profit'
                           options="{'currency_field': 'currency_id', 'field_digits': True}"
                           attrs="{'invisible':[('state','!=', 'paid')]}"/>
                    <field name="gross_profit" widget="monetary" string='Predicted Profit'
                           options="{'currency_field': 'currency_id', 'field_digits': True}"
                           attrs="{'invisible':[('state','=', 'paid')]}"/>
                </xpath>
<!--                <xpath expr="//header/button[@name='action_invoice_open']" position="before">-->
<!--                    <field name="is_released" invisible="1"/>-->
<!--                    <field name="storage_down_payment" invisible="1"/>-->
<!--                     <button name="storage_contract_release" type="object"-->
<!--                             string="Create PO"-->
<!--                             attrs="{'invisible': ['|', '|', ('state', '=', 'cancel'), ('storage_down_payment', '=', False), ('is_released', '=', True)]}"-->
<!--                             class="oe_highlight o_invoice_validate"-->
<!--                             groups="account.group_account_invoice"/>-->
<!--                </xpath>-->
                 <xpath expr="//form/sheet/notebook/page/field[@name='invoice_line_ids']/tree/field[@name='price_subtotal']" position="before">
                    <field name="is_storage_contract" invisible="1"/>
                </xpath>
            </field>
        </record>

        <record id="inherit_account_invoice_line_form_view" model="ir.ui.view">
            <field name="name">inherited.account.invoice.line.form.view</field>
            <field name="model">account.invoice.line</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="account.view_invoice_line_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='price_unit']" position="before">
                    <field name="profit_margin" attrs="{'invisible': [('parent.type','!=','out_invoice')]}"/>
                    <field name="lst_price" invisible="1"/>
                    <field name="working_cost" invisible="1"/>
                </xpath>
            </field>
        </record>

        <record id="inherit_view_account_position_form_pricepaper" model="ir.ui.view">
            <field name="name">inherited.account.position.form.view</field>
            <field name="model">account.fiscal.position</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="account.view_account_position_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <field name="code"/>
                </xpath>
            </field>
        </record>

        <record id="inherit_view_tax_form_pricepaper" model="ir.ui.view">
            <field name="name">inherited.account.tax.form.view</field>
            <field name="model">account.tax</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="account.view_tax_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <field name="code"/>
                </xpath>
            </field>
        </record>

        <record id="account_paymnet_term_default_field_inherit_price_paper" model="ir.ui.view">
            <field name="name">account payment default term</field>
            <field name="model">account.payment.term</field>
            <field name="inherit_id" ref="account.view_payment_term_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                   <field name="set_to_default" widget="boolean_toggle"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
