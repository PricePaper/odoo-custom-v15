<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <template id="ppt_custom_invoice_template_standard_tr_fee" inherit_id="batch_delivery.ppt_custom_invoice_template_standard">
            <xpath expr="//div[@id='total']/div[2]/table" position="inside">
                <t t-if="o.transaction_fee > 0">
                  <tr class="border-black o_subtotal">
                      <td><strong>Transaction Fee</strong></td>

                      <td class="text-right">
                        <span t-field="o.transaction_fee"/>
                      </td>
                  </tr>
                  <t t-set="gross_total" t-value="o.amount_total + o.transaction_fee"/>
                  <tr>
                    <td>
                      If paying by Credit card Total is <span t-field="o.currency_id.symbol" /><span t-esc="gross_total"/>
                    </td>
                  </tr>
                  <!-- <tr class="border-black o_total">
                      <td><strong>Gross Total</strong></td>
                      <td class="text-right">
                          <span t-field="o.currency_id.symbol" />
                          <span t-esc="gross_total"/>
                      </td>
                  </tr> -->
                </t>
            </xpath>
        </template>
      </data>
  </odoo>
