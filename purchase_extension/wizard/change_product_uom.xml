<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_change_product_uom_wiz" model="ir.ui.view">
            <field name="name">change.product.uom</field>
            <field name="model">change.product.uom</field>
            <field name="arch" type="xml">
                <form string="Duplicate Product">
                    <sheet>
                        <group>
                            <group>
                                <field name="product_id" readonly='1'/>
                                <field name="duplicate_pricelist" widget='boolean_toggle'
                                       help="Duplicate customer product priclist lines with new product"/>
                                <field name="maintain_price_ratio" widget="boolean_toggle"
                                       attrs="{'invisible': [('duplicate_pricelist','=',False)]}"/>
                            </group>
                            <group>
                                <field name="is_alternate_product" widget='boolean_toggle'/>
                                <field name="is_supercede_product" widget='boolean_toggle'/>
                            </group>
                        </group>
                        <separator string="New Product Details"/>
                        <group>
                            <group>
                                <field name="new_name" required='1'/>
                                <field name="new_default_code" required='1'/>
                            </group>
                            <group>
                                <field name="new_cost" required='1'/>
                                <field name="new_sale_uoms" widget="many2many_tags" required='1'/>
                                <field name="new_uom" required='1'/>
                                <field name="weight"/>
                                <field name="volume"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Sale UOM Mapper" attrs="{'invisible': [('duplicate_pricelist','=',False)]}">
                                <field name="mapper_ids">
                                    <tree editable="bottom" create="0" delete="0">
                                        <field name="old_uom_id" string="Old uom" required='1'/>
                                        <field name="new_uom_id" string="New uom" domain="[('id', 'in', parent.new_sale_uoms)]" required='1'/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                        <footer>
                            <button string="Create New Product" type="object" name="create_duplicate_product" calss="btn-success"/>
                            or
                            <button string="Cancel" class="btn-danger" special="cancel"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>
