<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="account_paymnet_term_inherit_price_paper" model="ir.ui.view">
            <field name="name">account payment term</field>
            <field name="model">account.payment.term</field>
            <field name="inherit_id" ref="account.view_payment_term_form"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet/group/group" position="after">
                    <group name="weight_volume">
                        <field name="code"/>
                        <field name="order_type"/>
                        <field name="is_discount" widget="boolean_toggle"/>
                        <field name="due_days" attrs="{'invisible':['|', ('is_discount', '=', False), ('order_type', '=', False)]}"/>
                        <field name="discount_per" attrs="{'invisible':['|', ('is_discount', '=', False), ('order_type', '=', False)]}"/>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>