<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="account.partner_view_buttons" model="ir.ui.view">
           <field name="groups_id" eval="[(4, ref('account.group_account_invoice')),(4, ref('sales_team.group_sale_salesman')),(4, ref('sales_team.group_sale_salesman_all_leads'))]"/>
        </record>

        <record id="ed_invoice_form" model="ir.ui.view">
            <field name="name">account.move.form</field>
            <field name="model">account.move</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//label[@for='invoice_payment_term_id']" position="before">
                        <field name="discount_date" readonly="1" attrs="{'invisible' : [('move_type','not in',('out_invoice','out_refund'))]}"/>
                </xpath>
                <xpath expr="//form/sheet/notebook/page[1]/group" position="after">
                     <button name='action_show_discount_popup' type='object'
                             string='Discount' class="fa fa-pencil-square-o oe_right"
                             attrs="{'invisible': [('state', '!=', 'posted')]}"/>
                    <button name="compute_taxes"
                                             type="object" string="Update Tax"
                                             class="fa fa-pencil-square-o oe_right"
                                             attrs="{'invisible': [('state', '!=', 'draft')]}"
                                             groups="account.group_account_user"/>

                </xpath>
            </field>
        </record>

