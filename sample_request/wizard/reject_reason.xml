<odoo>
    <data>
        <record id="view_msg_form_wizard" model="ir.ui.view">
            <field name="name">Reject Wizard</field>
            <field name="model">reject.reason</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Reject Reason">
                    <separator string="Reject Reason" colspan="6"/>
                    <h3>
                        <field name="message" colspan="4" nolabel="1" readonly="0"/>
                    </h3>
                    <newline/>
                    <separator colspan="6"/>
                    <footer>
                        <button name="reject_request" type='object' class="oe_highlight" string="Reject" />

                        <button special="cancel" class="oe_highlight" string="Close" />
                    </footer>

                </form>
            </field>
        </record>
    </data>
</odoo>