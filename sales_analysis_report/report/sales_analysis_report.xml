<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
         <record id="report_sales_analysis_view_pivot" model="ir.ui.view">
         <field name="name">sales.analysis.report.pivot</field>
         <field name="model">sales.analysis.report</field>
         <field name="arch" type="xml">
            <pivot string="Sales Analysis" disable_linking="True" display_quantity="true">
                <field name="partner_id" type="row"/>
                <field name="categ_id" type="row"/>
                <field name="product_qty" string="Quantity" type="measure"/>
                <field name="sales_dollars" string="Sales Dollars" type="measure"/>
                <field name="profit_dollars" string="Profit Dollars" type="measure"/>
            </pivot>
         </field>
    </record>

    <record id="report_sales_analysis_view_search" model="ir.ui.view">
        <field name="name">sales.analysis.report.search</field>
        <field name="model">sales.analysis.report</field>
        <field name="arch" type="xml">
            <search string="Sales Analysis">
                <field name="date_invoice"/>
                <field name="product_id"/>
                <!--as we already have quarter filters from base available-->

                <filter string="Date" name="current_quarter" date="date_invoice" />
                <filter string="Last 365 Days" name="last_year" domain="[('date_invoice', '&gt;=', (context_today() - datetime.timedelta(days=365)).strftime('%Y-%m-%d'))]"/>
                <group expand="1" string="Group By">
                    <filter string="Customer" name="customer" context="{'group_by':'partner_id'}"/>
                    <filter string="Category" name="category" context="{'group_by':'categ_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="report_sales_analysis_action" model="ir.actions.act_window">
        <field name="name">Sales Analysis By Qty</field>
        <field name="res_model">sales.analysis.report</field>
        <field name="view_mode">pivot</field>
        <field name="view_id" ref="report_sales_analysis_view_pivot"/>
        <field name="search_view_id" ref="report_sales_analysis_view_search"/>
        <field name="context">{'search_default_current_quarter': 1}</field>
    </record>

     <menuitem id="menu_report_sales_analysis"
            name="Sales Analysis By Qty"
            action="report_sales_analysis_action"
            parent="sale.menu_sale_report"
            sequence="1"/>
    </data>

</odoo>
